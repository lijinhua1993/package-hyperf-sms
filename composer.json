{
    "name": "lijinhua/hyperf-sms",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "sms"
    ],
    "description": "适用于hyperf的短信发送(移植自overtrue/easy-sms)",
    "autoload": {
        "psr-4": {
            "Lijinhua\\HyperfSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "tests"
        }
    },
    "require": {
        "php": ">=8.0",
        "hyperf/di": "3.0.*",
        "hyperf/framework": "3.0.*",
        "hyperf/guzzle": "^3.0",
        "hyperf/logger": "^3.0",
        "overtrue/easy-sms": "^2.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": ">=7.0",
        "swoole/ide-helper": "^4.5"
    },
    "suggest": {
        "swow/swow": "Required to create swow components."
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --colors=always",
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1"
    },
    "extra": {
        "hyperf": {
            "config": "Lijinhua\\HyperfSms\\ConfigProvider"
        }
    }
}
